<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RealmApp3.CompanyPage" Title="Информация о компании">
    <StackLayout>
        <Label Text="Имя" />
        <Entry Text="{Binding Name}" />
        <Label Text="Начальник" />
        <Entry Text="{Binding OwnerName}" />
        <Label Text="Количество работников" />
        <Entry Text="{Binding WorkerCount}" />
        <StackLayout Orientation="Horizontal">
            <Button Text="Сохранить" Clicked="SaveCompany" />
            <Button Text="Удалить" Clicked="DeleteCompany" />
        </StackLayout>
    </StackLayout>
</ContentPage>